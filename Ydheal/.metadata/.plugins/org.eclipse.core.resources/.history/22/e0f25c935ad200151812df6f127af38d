				public void actionPerformed(ActionEvent e) {

					p.setId(id);

					try {
						Class.forName("com.mysql.jdbc.Driver");

						// cria a conecxão
						java.sql.Connection con = ConexaoMySQL
								.getConexaoMySQL();

						java.sql.Statement st = con.createStatement();

						// formata data para padrão americano
						SimpleDateFormat Formatodataam = new SimpleDateFormat(
								"yyyy/MM/dd");

						double cliente = Double.parseDouble(tfcep.getText());
						double orcamento = Double.parseDouble(tfCpf.getText());
						double pedidonivel = Double.parseDouble(tfRg.getText());
						double pedidohistorico = Double.parseDouble(tfTelefone
								.getText());
						double telefone2 = Double.parseDouble(tfTelefone2
								.getText());

						st.execute("insert into tbl_pedido (pedido_id, cliente_id, orcamento_id, pedido_nivel, pedido_historico) values ('"
								+ 
								+ "',  '"
								+ cep
								+ "', '"
								+ Formatodataam.format(dateChooser.getDate())
								+ "', '"
								+ tfsobrenome.getText()
								+ "', '"
								+ tfNome.getText()
								+ "', '"
								+ cpf
								+ "', '"
								+ rg
								+ "', '"
								+ tfEndereco.getText()
								+ "', '"
								+ tfBairro.getText()
								+ "',  '"
								+ tfComplemento.getText()
								+ "', '"
								+ telefone
								+ "',  '"
								+ telefone2
								+ "',  '"
								+ tfEmail.getText() + "');");

						// fala que executou com sucesso
						JOptionPane.showMessageDialog(null,
								"Cliente cadastrado com sucesso!");

						st.close();
						// fecha a concxão
						con.close();

						// fecha a tela após sucesso
						dispose();

					} catch (SQLException erroBanco) {
						JOptionPane.showMessageDialog(null,
								"Falha na conexão com o banco de dados.",
								"WARNING!", JOptionPane.WARNING_MESSAGE);
						erroBanco.printStackTrace();
					}
				}
